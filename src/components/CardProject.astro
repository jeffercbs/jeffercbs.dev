---
import { Image } from "@astrojs/image/components";
export interface Props {
   name: string;
   desc: string;
   link: string;
   img: string;
}

const { name, desc, link, img } = Astro.props;
---

<article>
   <Image
      src={img}
      alt={name}
      format="webp"
      aspectRatio="16:9"
      width={400}
      height={370}
      class="w-full h-auto"
   />
   <a href={link} target="_blank" rel="noopener noreferrer">
      <h1 class="uppercase text-xl font-bold">{name}</h1>
      <p>{desc}</p>
   </a>
</article>

<style>
   article {
      @apply h-auto p-4 border-2 rounded-md relative min-h-[400px] max-h-[500px] bg-black grayscale hover:grayscale-0;
   }
   article:hover {
      @apply duration-150 ease-in-out;
      animation: shadow-drop-center 0.4s linear both;
   }
   article a {
      @apply absolute inset-0 flex flex-col justify-end bg-opacity-50 px-8 py-4 z-10;
      background: linear-gradient(0deg, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0.1));
   }
</style>
